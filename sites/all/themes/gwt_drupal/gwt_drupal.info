screenshot  = screenshot.png
name        = GWT Drupal P2
description = Government Web Template theme
version = 2.5.0
core = 7.x

engine      = phptemplate

stylesheets[all][] = system.menus.css
stylesheets[all][] = system.messages.css
stylesheets[all][] = system.theme.css

; Then we add our own stylesheet.
stylesheets[all][] = css/styles.css

; Optionally add some JavaScripts to your theme.

scripts[] = js/jquery.min.js
scripts[] = js/foundation.js
scripts[] = js/theme.js

regions[navigation]     = 'Top bar Left'
regions[top_bar_right]  = 'Top Bar Right'
regions[top_bar_search]  = 'Top Bar Search'
regions[header]         = 'MastHead'
regions[ear_content]	= 'Ear Content 1'
regions[ear_content_2]	= 'Ear Content 2'
regions[banner]         = 'Banner Slider'
regions[banner_2]       = 'Banner Content 1'
regions[banner_3]       = 'Banner Content 2'
regions[auxiliary_left] = 'Auxiliary Left'
regions[auxiliary_right]= 'Auxiliary right'
regions[breadcrumbs]    = 'Breadcrumbs'
regions[highlighted]    = 'Highlighted'
regions[help]           = 'Help'
regions[panel_top]      = 'Panel Top 1'
regions[panel_top_2]    = 'Panel Top 2'
regions[panel_top_3]    = 'Panel Top 3'
regions[panel_top_4]    = 'Panel Top 4'
regions[content]        = 'Content'
regions[sidebar_first]  = 'Left sidebar'
regions[sidebar_second] = 'Right sidebar'
regions[panel_bottom]   = 'Panel Bottom 1'
regions[panel_bottom_2] = 'Panel Bottom 2'
regions[panel_bottom_3] = 'Panel Bottom 3'
regions[panel_bottom_4] = 'Panel Bottom 4'
regions[footer]         = 'Agency Footer 1'
regions[footer_2]       = 'Agency Footer 2'
regions[footer_3]       = 'Agency Footer 3'
regions[footer_4]       = 'Agency Footer 4'
;regions[footer_standard] = 'Standard Footer'
regions[bottom]         = 'Page bottom'

; The page_top and page_bottom regions are hidden, which means they will not
; show up on the blocks administration page. But they are required in order for
; the html.tpl.php to work properly, so do not delete them.

regions[page_top]       = Page top
regions[page_bottom]    = Page bottom

; Various page elements output by the theme can be toggled on and off. The
; "features" control which of these check boxes display on the
; admin/appearance config page. This is useful for suppressing check boxes
; for elements not used by your theme. To suppress a check box, omit the
; entry for it below. See the Drupal 7 Theme Guide for more info:
; https://drupal.org/node/171205#features

features[] = logo
features[] = name
features[] = slogan
features[] = node_user_picture
features[] = comment_user_picture
features[] = favicon
features[] = main_menu
features[] = secondary_menu

; Set the default values of settings on the theme-settings.php form.

settings[gwt_drupal_breadcrumb]           = yes
settings[gwt_drupal_breadcrumb_separator] = ''
settings[gwt_drupal_breadcrumb_home]      = 1
settings[gwt_drupal_breadcrumb_trailing]  = 0
settings[gwt_drupal_breadcrumb_title]     = 0
settings[gwt_drupal_skip_link_anchor]     = main-menu
settings[gwt_drupal_skip_link_text]       = Jump to navigation
settings[gwt_drupal_html5_respond_meta][] = respond
settings[gwt_drupal_html5_respond_meta][] = html5
settings[gwt_drupal_html5_respond_meta][] = meta
settings[gwt_drupal_rebuild_registry]     = 1
settings[gwt_drupal_wireframes]           = 0
settings[gwt_drupal_acc_widget]           = 0

settings[site_republic_text] = 'REPUBLIC OF THE PHILIPPINES'
settings[gwt_drupal_masthead_bg_color] = 
settings[gwt_drupal_masthead_font_color] = '#000000'
settings[gwt_drupal_banner_bg_color] = 
settings[gwt_drupal_banner_font_color] = '#666666'
settings[gwt_drupal_banner_bg_image] = 0
settings[gwt_drupal_content_border_position] = 0
settings[gwt_drupal_content_border] = 1
settings[gwt_drupal_content_border_radius] = 0
settings[gwt_drupal_content_border_color] = '#000'
settings[gwt_drupal_content_heading_font] = 'Normal'
settings[gwt_drupal_content_bg_color] = '#f2f2f2'
settings[gwt_drupal_footer_bg_color] = '#cccccc'
settings[gwt_drupal_logo_font] = 'Sans-serif'

